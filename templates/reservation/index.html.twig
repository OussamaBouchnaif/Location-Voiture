{% extends 'base.html.twig' %}

{% block title %}Hello TestController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>




<main>
    {% for  message in app.flashes('success') %}
        
        <div class="alert alert-success text-center">
            {{ message }}
        </div>

    {% endfor %}
    <div class="header">
        <h1 style="color: #807575;">Gestion Des Reservations</h1>
            <div class="d-flex justify-content-between align-items-center mt-5">

                <form action="{{path('recherch_reservation')}}" >
                    <div class="input-group">
                        <input type="search" class="form-control rounded" placeholder="Search" name="value" />
                        <button type="submit" class="btn btn-outline-primary">search</button>
                    </div>
                </form>
                
    
                 <a href="{{path('create_reservation')}}" class="btn btn-primary" >
                    <i class='bx bx-plus-circle'></i>
                    <span>Nouveau Reservation</span>
                </a>
            </div>
            
    
       
        
       
    </div>
    <table class="table table-hover mt-5" >
        <thead>
          <tr>
            <th scope="col">Voiture</th>
            <th scope="col">Client</th>
            <th scope="col">Agence</th>
            <th scope="col">Date Depart</th>
            <th scope="col">Date Retour</th>
            <th scope="col" class="text-center" colspan="2"> Actions </th>
          </tr>
        </thead>
        <tbody>
            {% for res in reservation %}
            <tr>
                {% if var == 'afficher' %}
                    <td>
                        <img src="{{asset('uploads/' ~ res.voiture.image )}}"  style="width:80px; " >
                        {{res.voiture.model.libelle}}
                        {{res.voiture.categorie.libelle}}
                    </td>
                    <td class="p-3">{{res.client.nom}}
                        {{res.client.prenom}}
                    </td>
                    <td class="p-3">{{res.agence.nomagence}}</td>
                {% elseif var == 'recherch' %}
                    <td>
                        <img src="{{asset('uploads/' ~ res.image )}}"  style="width:80px; " >
                        {{res.categorie}}
                        {{res.model}}
                    </td>
                    <td class="p-3">{{res.nomc}}
                        {{res.prenomc}}
                    </td>
                    <td class="p-3">{{res.agence}}</td>
                {% endif %}
                <td class="p-3">{{res.date_depart|date('d/m/y')}}</td>
                <td class="p-3">{{res.date_retour|date('d/m/y')}}</td>
                <td  class="text-center p-3"><a href="{{path('delete_reservation',{id:res.id})}}"><i  class="fa-solid fa-trash text-danger"></i></a></td>
                <td class="text-center p-3"><a href="{{path('edit_reservation',{id:res.id})}}" ><i class="fa-solid fa-pen-to-square text-warning"></i></a></td>
                
            </tr>
            {% endfor %}
          
        </tbody>
      </table>


</main>
{% endblock %}
